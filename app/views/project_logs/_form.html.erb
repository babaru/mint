
<%= simple_form_for(@project_log , html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :type, collection: [ReleaseProjectLog, IssueProjectLog, BlockProjectLog].collect{|item| [item.model_name.human, item.name]} %>
    <%= f.input :recorded_on, as: :date_picker, input_html: { value: Time.now.strftime('%Y-%m-%d')} %>
    <%= f.input :remark %>
    <%= f.input :project_id, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
