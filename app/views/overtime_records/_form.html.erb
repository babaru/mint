
<%= simple_form_for(@overtime_record , html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
            
    <%= f.input :user_id %>
          
    <%= f.input :project_id %>
          
    <%= f.input :recorded_on %>
          
    <%= f.input :value %>
                      
    <%= f.input :task_type_id %>
          
    <%= f.input :remark %>
          
    <%= f.input :time_sheet_id %>
          
    <%= f.input :started_at %>
          
    <%= f.input :ended_at %>
          
    <%= f.input :type %>
        </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
