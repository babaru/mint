
<%= simple_form_for(@project, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name, required: true %>

    <%= f.input :started_at, as: :date_picker, required: true %>

    <%= f.input :ended_at, as: :date_picker, required: true %>

    <%= f.input :client_id, collection: Client.all.map{|v| [v.name, v.id]} %>

    <%= f.input :parent_id, collection: Project.all.map{|v| [v.name, v.id]} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
