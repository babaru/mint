<div id="main">

<%= hidden_field_tag :current_user_id, current_user.id, id: 'current-user-id' %>

  <div id="header">

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span6"><h2 class='title'><span><i class="icon-calendar"></i> Time Recorder </span></h2></div>
        <div class="span6">
          <div class="user-block pull-right btn-toolbar">
            <div class="btn-group">
              <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
                Welcome, <%= content_tag(:strong, current_user.name) %>
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to( fa_icon('signout', text: t("buttons.sign_out")), destroy_user_session_path, :method=>'delete') %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>


  <div id="calendar"></div>

</div>

