<div id="devise-session-new">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

<table>
  <tr>
    <td><%= f.input :login, autofocus: true, label: false, placeholder: 'email or name' %></td>
    <td><%= f.input :password, label: false, placeholder: 'password' %></td>
    <td><%= f.button :submit, t("buttons.sign_in") %></td>
  </tr>
</table>

<%- if alert %>
<div class="alert">
  <%= alert %>
</div>
<% end -%>

<% end %>
</div>


