
<%= simple_form_for(@user , html: {class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
    <%= f.association :roles, collection: Role.all.collect{|r| [r.name.humanize, r.id]}, as: :check_boxes %>
    <%= f.association :user_groups, collection: UserGroup.all.collect{|r| [r.name.humanize, r.id]}, as: :check_boxes %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
