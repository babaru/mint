<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: Role.model_name.human)}",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => Role.model_name.human)),
            url: new_role_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        )
      ]
    }
  }
)
%>

<%= grid(@roles_grid, :show_filters => :when_filtered) do |g|
  g.column :name => t('activerecord.attributes.role.id'), :html => {:class => "grid-cell"} do |role|
    role.id
  end
  g.column :name => t('activerecord.attributes.role.name'), :html => {:class => "grid-cell"} do |role|
    role.name
  end
  g.column :name => t('activerecord.attributes.role.created_at'), :html => {:class => "grid-cell"} do |role|
    role.created_at
  end
  g.column :name => t('activerecord.attributes.role.updated_at'), :html => {:class => "grid-cell"} do |role|
    role.updated_at
  end


  g.column html: {class: 'btn-cell'} do |role|
    link_to(fa_icon('edit'), edit_role_path(role), class: 'btn', rel: 'tooltip', title: t('buttons.edit'))
  end

  g.column html: {class: 'btn-cell'} do |role|
    link_to(fa_icon('trash'), role_path(role), method: :delete, confirm: t("confirms.delete"), class: 'btn btn-danger', rel: 'tooltip', title: t('buttons.delete'))
  end
end -%>
