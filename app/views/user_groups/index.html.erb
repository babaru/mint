<%= render_cell(
  :page_title,
  :show,
  data:
  {
    name: "#{t('model.list', model: UserGroup.model_name.human)}",
    toolbar:
    {
      right:
      [
        render_cell(
          :button,
          :show,
          data:
          {
            name: fa_icon('plus-sign', text: t('model.create', :model => UserGroup.model_name.human)),
            url: new_user_group_path,
            options:
            {
              class: 'btn btn-primary'
            }
          }
        )
      ]
    }
  }
)
%>

<%= grid(@user_groups_grid, :show_filters => :when_filtered) do |g|
  g.column :name => t('activerecord.attributes.user_group.id'), :html => {:class => "grid-cell"} do |user_group|
    user_group.id
  end
  g.column :name => t('activerecord.attributes.user_group.name'), :html => {:class => "grid-cell"} do |user_group|
    user_group.name
  end
  g.column :name => t('activerecord.attributes.user_group.created_at'), :html => {:class => "grid-cell"} do |user_group|
    user_group.created_at
  end
  g.column :name => t('activerecord.attributes.user_group.updated_at'), :html => {:class => "grid-cell"} do |user_group|
    user_group.updated_at
  end


  g.column html: {class: 'btn-cell'} do |user_group|
    link_to(fa_icon('edit'), edit_user_group_path(user_group), class: 'btn', rel: 'tooltip', title: t('buttons.edit'))
  end

  g.column html: {class: 'btn-cell'} do |user_group|
    link_to(fa_icon('trash'), user_group_path(user_group), method: :delete, confirm: t("confirms.delete"), class: 'btn btn-danger', rel: 'tooltip', title: t('buttons.delete'))
  end
end -%>
