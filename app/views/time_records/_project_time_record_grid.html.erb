
<%= grid(@project_time_record_grid, :show_filters => :none) do |g|
  g.column :name => t('activerecord.attributes.time_record.project_id'), :html => {:class => "grid-cell"} do |time_record|
    time_record.project.name
  end
  1.upto(31) do |n|
    g.column :name => n, :html => {:class => "number-cell"} do |time_record|
      content_tag(:span, nil, class: "record-#{time_record.project_id}-#{@start_date.year}-#{@start_date.month}-#{n}")
    end
  end
end -%>